<% include ../partials/header%>

<div class ="container">
    <header class="jumbotron">
        <div class="container">
            <p>people who liked <%= original.name%> also liked the following.... </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% books.forEach(function(book){ %>
       <div class="col-md-3 col-sm-6">
            <div class="thumbnail" onclick="location.href='/books/<%= book._id %>'; ">
                <div class="caption">
                    <h4> <%=book.name%></h4>
                </div>
                    <img src="<%=book.image%>">
            </div>
            </div>
       <% });%>
    </div>
</div>
<% include ../partials/footer%>
