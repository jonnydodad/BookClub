<% include ../partials/header%>
<di class="container">
    <div class="row">
        <h1 style="text-align:center">edit <%= book.name %></h1>
        
         <div style="width:30%; margin:25px auto">
             <form action="/books/<%= book._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.name %>" name="book[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.author %>" name="book[author]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.genre %>" placeholder="genre" name="book[genre]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"value="<%= book.image %>" name="book[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.description %>" placeholder="description" name="book[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-block">Submit!</button>
                </div>
            </form>
            <a href="/books">back</a>
         </div>
    </div>
</div>
<% include ../partials/footer%>
